<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="employee_employee_view_form_inherit" model="ir.ui.view">
            <field name="name">employee.employee.view.form.inherit</field>
            <field name="model">employee.employee</field>
            <field name="inherit_id" ref="first_module.employee_employee_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[1]/group[1]" position="inside">
                    <field name="email"/>
                </xpath>

                <xpath expr="//sheet/group[1]/group[2]" position="inside">
                    <field name="mobile" widget="phone"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>