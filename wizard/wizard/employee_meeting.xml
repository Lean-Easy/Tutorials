<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="employee_meeting_add_note_form" model="ir.ui.view">
            <field name="name">employee.meeting.view.form</field>
            <field name="model">employee.meeting</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="employee_id" invisible="1"/>
                        <group>
                            <field name="note"/>
                        </group>
                    </sheet>
                    <footer>
                        <button special="cancel" 
                                string="Cancel" 
                                class="btn btn-secondary"/>
                        <button string="Submit Meeting Notes" 
                                type="object" 
                                class="oe_highlight" 
                                name="add_meeting_note"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>